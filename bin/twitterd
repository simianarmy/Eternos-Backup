#!/usr/bin/env ruby
#
# Stub executable for twitter backup daemon

require File.dirname(__FILE__) + '/../config/environment'

DaemonKit::Initializer.run do |config|
  # The name of the daemon as reported by process monitoring tools
  config.daemon_name = 'twitter_backupd'
  config.log_path = DAEMON_ROOT + '/log/twitterd.log'
end

DaemonKit::Application.run( DAEMON_ROOT + '/libexec/twitterd-daemon.rb' )
